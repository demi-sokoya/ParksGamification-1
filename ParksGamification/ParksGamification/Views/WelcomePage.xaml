<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParksGamification.Views.WelcomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome!" BackgroundColor="Blue"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Access API"
                    Clicked="OnAccessAPIClicked" />
            
            <Button Text="Device Orientation"
                    Clicked="OnDeviceOrientationClicked" />

            <Button Text="Pick Photo"
                    Clicked="OnPickPhotoClicked" />

            <Image x:Name="image" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>