<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ParksGamification.ViewModels;assembly=ParksGamification"
             xmlns:models="clr-namespace:ParksGamification.Models;assembly=ParksGamification"
             x:Class="ParksGamification.Views.ParksListPage">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <RefreshView x:DataType="viewModels:ParkListViewModel" Command="{Binding LoadParksCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                <CollectionView ItemsSource="{Binding Parks}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10" BackgroundColor="AntiqueWhite" x:DataType="models:Park">
                                <Label Text="{Binding Name}" TextColor="Black" FontSize="18"/>
                                <Label Text="{Binding Description}" TextColor="Blue"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>